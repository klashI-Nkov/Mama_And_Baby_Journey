<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layoutDirection="rtl"
    android:theme="@style/screen_Background"
    style="@style/screen_Background"

    tools:context=".mother_section.screens_folder.Advices"
    tools:ignore="HardcodedText">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:theme="@style/Buttons_Container_Style"
        style="@style/Buttons_Container_Style"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_37sdp"
        android:layout_marginTop="@dimen/_70sdp"
        android:paddingVertical="1dp"
        android:paddingHorizontal="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Mothers_Advice_BTN"

            android:theme="@style/Right_Button_Style"
            style="@style/Right_Button_Style"

            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_130sdp"
            android:paddingHorizontal="@dimen/_17sdp"

            android:backgroundTint="#3CFFFFFF"

            android:textSize="@dimen/_15sdp"
            android:text="نصائح الام"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Baby_Advice_BTN"

            android:theme="@style/Left_Button_Style"
            style="@style/Left_Button_Style"

            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_9sdp"

            android:textSize="@dimen/_15sdp"
            android:text="نصائح الطفل"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>