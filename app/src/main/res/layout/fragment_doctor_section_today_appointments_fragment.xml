<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:gravity="center"

    android:theme="@style/screen_Background"
    style="@style/screen_Background"

    tools:context=".doctor_section.screens_folder.Today_Appointments"

    tools:ignore="HardcodedText">

    <LinearLayout
        android:theme="@style/No_Style"
        style="@style/No_Style"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_75sdp"
        android:layout_marginBottom="@dimen/_40sdp"

        android:layout_weight="1"

        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="InefficientWeight">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Today_Appointments_Recycler_View"

            android:theme="@style/No_Style"
            style="@style/No_Style"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/No_Today_Appointments_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:text="لا يوجد مواعيد لليوم"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

</LinearLayout>