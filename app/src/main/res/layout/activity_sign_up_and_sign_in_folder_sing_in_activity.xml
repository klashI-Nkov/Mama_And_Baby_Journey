<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/Constraint"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:gravity="center_horizontal"

    android:theme="@style/screen_Background"
    style="@style/screen_Background"
    tools:context=".sign_up_and_sign_in_folder.Sing_in_Activity">


    <TextView
        android:id="@+id/textView1"

        style="@style/TextViewStyle"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32sdp"

        android:background="@android:color/transparent"

        android:fontFamily="@font/pacifico"

        android:textAlignment="center"
        android:textSize="@dimen/_31sdp"
        android:text="Mama Baby Journey"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <!--Email Edit Text-->
    <EditText
        android:id="@+id/Email_Edit_text"

        android:theme="@style/EditTextStyle"
        style="@style/EditTextStyle"

        android:layout_width="match_parent"
        android:layout_height="@dimen/_39sdp"
        android:layout_marginHorizontal="@dimen/_23sdp"
        android:layout_marginTop="@dimen/_53sdp"
        android:paddingHorizontal="@dimen/_10sdp"

        android:drawableEnd="@drawable/icons_email_icon"

        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textSize="@dimen/_12sdp"
        android:hint="البريد الالكتروني"

        android:imeOptions="actionNext"

        tools:ignore="Autofill,HardcodedText,TextContrastCheck" />

    <!--Password Edit Text-->
    <EditText
        android:id="@+id/password_edit_text"

        android:theme="@style/EditTextStyle"
        style="@style/EditTextStyle"

        android:layout_width="match_parent"
        android:layout_height="@dimen/_39sdp"
        android:layout_marginTop="@dimen/_45sdp"
        android:layout_marginHorizontal="@dimen/_23sdp"
        android:paddingHorizontal="@dimen/_10sdp"

        android:drawableEnd="@drawable/icons_lock_icon"

        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="@dimen/_12sdp"
        android:hint="كلمة المرور"

        android:imeOptions="actionDone"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="Autofill,HardcodedText,TextContrastCheck" />

    <TextView
        android:id="@+id/textView5"

        style="@style/TextViewStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_78sdp"

        android:background="@android:color/transparent"

        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:text="نسيت كلمة السر ؟"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText,TouchTargetSizeCheck" />

    <!--Sing In Button-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sing_In_BTN"

        android:theme="@style/EditTextStyle"
        style="@style/EditTextStyle"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_53sdp"
        android:layout_marginHorizontal="@dimen/_39sdp"

        android:textSize="@dimen/_15sdp"
        android:text="تسجيل الدخول"

        android:onClick="sing_In_BTN"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText" />

    <TextView
        style="@style/TextViewStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"

        android:background="@android:color/transparent"

        android:textAlignment="center"
        android:textSize="18sp"
        android:text="ـــــــــــــــــــــ او ـــــــــــــــــــــ"

        tools:ignore="HardcodedText" />

    <LinearLayout
        android:theme="@style/EditTextStyle"
        style="@style/EditTextStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_23sdp"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="@dimen/_10sdp"

        android:orientation="horizontal"
        android:gravity="center"

        android:onClick="Sing_In_By_Google"

        tools:ignore="UseCompoundDrawables">

        <TextView
            android:theme="@style/No_Style"
            style="@style/TextViewStyle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="@dimen/_10sdp"

            android:textAlignment="center"

            android:textSize="@dimen/_14sdp"
            android:text="تسجيل الدخول باستخدام جوجل "

            tools:ignore="HardcodedText" />

        <ImageView
            android:theme="@style/No_Style"
            style="@style/No_Style"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"


            android:src="@drawable/g_logo"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>