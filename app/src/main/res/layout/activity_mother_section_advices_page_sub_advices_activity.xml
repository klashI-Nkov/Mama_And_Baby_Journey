<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layoutDirection="rtl"
    android:gravity="center"
    android:orientation="vertical"

    android:theme="@style/screen_Background"
    style="@style/screen_Background"

    tools:context=".mother_section.screens_folder.advices_page.Sub_Advices_Activity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/Sub_Advice_Title"

        android:theme="@style/TextViewStyle2"
        style="@style/TextViewStyle2"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_40sdp"

        android:background="@android:color/transparent"
        android:textAlignment="center"

        android:textSize="@dimen/_18sdp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/Sub_Advice_Layout"
        android:theme="@style/No_Style"
        style="@style/No_Style"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_34sdp"

        android:orientation="vertical"
        android:gravity="center">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Sub_Advice_Recycler_View"
            android:theme="@style/No_Style"
            style="@style/No_Style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>