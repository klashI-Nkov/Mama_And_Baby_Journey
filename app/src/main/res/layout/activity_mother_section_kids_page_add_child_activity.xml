<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/Constraint"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:theme="@style/screen_Background"
    style="@style/screen_Background"

    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:gravity="center_horizontal"

    tools:context=".mother_section.screens_folder.kids_page.Add_Child_Activity">

    <TextView
        android:id="@+id/Screen_Title"

        android:theme="@style/TextViewStyle2"
        style="@style/TextViewStyle2"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:layout_marginTop="@dimen/_50sdp"

        android:background="@android:color/transparent"
        android:textAlignment="center"

        android:textSize="@dimen/_18sdp"
        android:text="اضافة طفل جديد"

        tools:ignore="HardcodedText"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:theme="@style/No_Style"
        style="@style/No_Style"
        android:layout_width="@dimen/_119sdp"
        android:layout_height="@dimen/_119sdp"
        android:layout_marginTop="@dimen/_30sdp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/child_image_view"

            android:theme="@style/No_Style"
            style="@style/No_Style"

            android:layout_width="@dimen/_107sdp"
            android:layout_height="@dimen/_107sdp"

            android:src="@drawable/images_baby"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="1.0"/>

        <ImageButton
            android:id="@+id/Pick_Image_BTN"

            android:theme="@style/Icon_BG"
            style="@style/Icon_BG"

            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_45sdp"

            android:padding="@dimen/_8sdp"

            app:srcCompat="@drawable/images_pick_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription"
            android:scaleType="fitCenter"
            app:layout_constraintVertical_bias="0.98"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:theme="@style/No_Style"
        style="@style/No_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginHorizontal="@dimen/_23sdp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Name_Edit_text"

            android:theme="@style/EditTextStyle"
            style="@style/EditTextStyle"

            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"

            android:layout_weight="1"
            android:gravity="center"

            android:inputType="text"
            android:textSize="@dimen/_12sdp"
            android:hint="الاسم"

            android:imeOptions="actionDone"

            tools:ignore="Autofill,HardcodedText"/>

        <Spinner
            android:id="@+id/Gender_Sp"

            android:layout_width="wrap_content"
            android:layout_height="@dimen/_38sdp"

            android:paddingHorizontal="@dimen/_10sdp"

            android:layout_weight="1"

            android:spinnerMode="dialog"

            android:textSize="@dimen/_15sdp"

            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Save_BTN"

        android:theme="@style/EditTextStyle"
        style="@style/EditTextStyle"

        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginHorizontal="@dimen/_23sdp"

        android:textSize="@dimen/_12sdp"
        android:text="حفظ"

        android:onClick="Save_BTN"

        tools:ignore="HardcodedText"/>

</androidx.appcompat.widget.LinearLayoutCompat>