<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/Constraint"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:theme="@style/screen_Background"
    style="@style/screen_Background"

    android:layoutDirection="rtl"

    tools:context=".mother_section.screens_folder.kids_page.Add_Child_Activity">

    <TextView
        android:id="@+id/textView"

        android:theme="@style/TextViewStyle2"
        style="@style/TextViewStyle2"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:layout_marginTop="@dimen/_50sdp"

        android:background="@android:color/transparent"
        android:textAlignment="center"

        android:textSize="@dimen/_18sdp"
        android:text="اضافة طفل جديد"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view"

        android:theme="@style/No_Style"
        style="@style/No_Style"

        android:layout_width="@dimen/_107sdp"
        android:layout_height="@dimen/_107sdp"
        android:layout_marginTop="@dimen/_18sdp"

        android:src="@drawable/images_baby"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.207" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Save_BTN"

        android:theme="@style/EditTextStyle"
        style="@style/EditTextStyle"

        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginHorizontal="@dimen/_23sdp"

        android:textSize="@dimen/_12sdp"
        android:text="حفظ"

        android:onClick="Save_BTN"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.616"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/Name_Edit_text"

        android:theme="@style/EditTextStyle"
        style="@style/EditTextStyle"

        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginHorizontal="@dimen/_23sdp"

        android:inputType="text"
        android:textAlignment="center"
        android:textSize="@dimen/_12sdp"
        android:hint="الاسم"

        android:imeOptions="actionDone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextSizeCheck,VisualLintTextFieldSize,TextContrastCheck"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.482" />

    <ImageButton
        android:id="@+id/Pick_Image_BTN"

        android:theme="@style/Icon_BG"
        style="@style/Icon_BG"

        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_45sdp"

        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:padding="@dimen/_8sdp"

        app:srcCompat="@drawable/images_pick_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.37"
        tools:ignore="ContentDescription"
        android:scaleType="fitCenter" />

</androidx.constraintlayout.widget.ConstraintLayout>